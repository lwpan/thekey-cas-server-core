<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean id="oauth.manager" class="org.ccci.gto.cas.oauth.OAuthManagerImpl">
    <property name="randomStringGenerator">
      <bean class="org.ccci.gto.cas.util.Base64RandomStringGenerator">
        <!-- 6 bits of entry per character, 35 * 6 = 210 bits of entropy -->
        <constructor-arg index="0" value="35" />
        <constructor-arg index="1" value="true" />
      </bean>
    </property>
  </bean>

  <bean id="oauth.auth.handler" class="org.ccci.gto.cas.oauth.authentication.OAuth2AuthenticationHandler">
    <property name="OAuthManager" ref="oauth.manager" />
    <property name="userService" ref="service.gcxUserService" />
  </bean>

  <bean id="oauth.federated.auth.populator" class="org.ccci.gto.cas.federation.authentication.FederatedAuthenticationMetaDataPopulator">
    <constructor-arg value="org.ccci.gto.cas.oauth.authentication.OAuth2Credentials" />
    <constructor-arg value="false" />
    <property name="proxyUri" value="urn:thekey:placeholder" />
    <property name="requireProxyValidation" value="true" />
  </bean>

  <bean class="org.ccci.gto.cas.oauth.web.OAuthActionSupport">
    <property name="OAuthManager" ref="oauth.manager" />
  </bean>

  <bean class="org.ccci.gto.cas.oauth.api.restlet.TokenResourceSupport">
    <property name="OAuthManager" ref="oauth.manager" />
  </bean>
</beans>
