<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="userValidator" class="org.ccci.gto.cas.selfservice.SelfServiceUserValidator">
		<property name="authenticationManager" ref="authenticationManager" />
		<property name="passwordValidator" ref="passwordValidator" />
		<property name="userService" ref="service.gcxUserService" />
	</bean>

	<bean id="selfServiceController" class="org.ccci.gto.cas.selfservice.SelfServiceController">
		<property name="authenticationManager" ref="authenticationManager" />
		<property name="userService" ref="service.gcxUserService" />
	</bean>

	<bean id="activationAction" class="org.ccci.gto.cas.web.flow.ActivationAction">
		<property name="gcxUserService" ref="service.gcxUserService" />
	</bean>

	<bean id="passwordValidator" class="org.ccci.gcx.idm.web.validation.impl.RuleBasedPasswordValidatorImpl">
		<property name="configurator">
			<bean class="org.ccci.gcx.idm.web.config.XmlConfigurator">
				<property name="location" value="classpath:config/passwords.xml" />
			</bean>
		</property>
		<property name="messageSource" ref="messageSource" />
	</bean>
</beans>
