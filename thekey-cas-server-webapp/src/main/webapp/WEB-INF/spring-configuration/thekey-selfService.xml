<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="userValidator" class="org.ccci.gto.cas.selfservice.SelfServiceUserValidator">
		<property name="authenticationManager" ref="authenticationManager" />
		<property name="passwordValidator" ref="passwordValidator" />
		<property name="userService" ref="service.gcxUserService" />
	</bean>

	<bean id="selfServiceController" class="org.ccci.gto.cas.selfservice.SelfServiceController">
		<property name="authenticationManager" ref="authenticationManager" />
		<property name="userService" ref="service.gcxUserService" />
	</bean>
</beans>
