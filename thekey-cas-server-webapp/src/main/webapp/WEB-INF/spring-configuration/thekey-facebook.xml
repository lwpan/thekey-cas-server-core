<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="facebookViewInterceptor" class="org.ccci.gto.cas.web.servlet.FacebookViewInterceptor">
		<property name="attributes">
			<map>
				<entry key="appId" value="${facebook.appId}" />
			</map>
		</property>
	</bean>

	<bean id="facebook.auth.handler" class="org.ccci.gto.cas.authentication.handler.FacebookAuthenticationHandler">
		<property name="appId" value="${facebook.appId}" />
		<property name="secret" value="${facebook.secret}" />
	</bean>

	<bean id="facebook.auth.resolver" class="org.ccci.gto.cas.authentication.principal.FacebookCredentialsToPrincipalResolver" />

	<bean id="facebook.user.auth.populator" class="org.ccci.gto.cas.authentication.FacebookUserAuthenticationMetaDataPopulator">
		<property name="userService" ref="service.gcxUserService" />
	</bean>

	<bean id="facebook.proxy.auth.populator" class="org.ccci.gto.cas.authentication.ProxyAuthenticationMetaDataPopulator">
		<constructor-arg value="org.ccci.gto.cas.authentication.principal.FacebookCredentials" />
		<constructor-arg value="true" />
		<property name="proxyUri" value="${facebook.proxyUri}" />
	</bean>

	<bean id="facebookAction" class="org.ccci.gto.cas.web.flow.FacebookAction" />
</beans>
