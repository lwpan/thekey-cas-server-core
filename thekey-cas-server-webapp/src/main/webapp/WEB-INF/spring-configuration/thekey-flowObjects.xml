<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="activationAction" class="org.ccci.gto.cas.web.flow.ActivationAction">
		<property name="gcxUserService" ref="service.gcxUserService" />
	</bean>

	<bean id="legacyRedirectHeaders" class="org.ccci.gto.cas.web.flow.LegacyRedirectHeadersAction">
		<property name="redlist" ref="redlist" />
	</bean>

	<bean id="legacyLoginAction" class="org.ccci.gto.cas.web.flow.LegacyLoginAction">
		<property name="redlist" ref="redlist" />
	</bean>

	<bean id="redlist" class="org.ccci.gto.cas.config.ServerConfigList">
		<constructor-arg index="0" value="${redlist.location}" />
	</bean>

	<bean id="passwordConfigurator" class="org.ccci.gcx.idm.web.config.XmlConfigurator">
		<property name="location" value="classpath:config/passwords.xml" />
	</bean>

	<bean id="passwordValidator"
		class="org.ccci.gcx.idm.web.validation.impl.RuleBasedPasswordValidatorImpl">
		<property name="configurator" ref="passwordConfigurator" />
		<property name="messageSource" ref="messageSource" />
	</bean>
</beans>
