<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<!-- Transitional User Authentication Handler -->
	<bean id="transitional.auth.handler" class="org.ccci.gto.cas.authentication.handler.TransitionalUserHandler">
		<property name="gcxUserService" ref="service.gcxUserService" />
	</bean>

	<!-- Legacy programmatic login support -->
	<bean id="redlist" class="org.ccci.gto.cas.config.ServerConfigList">
		<constructor-arg index="0" value="${redlist.location}" />
	</bean>

	<bean id="legacyRedirectHeaders" class="org.ccci.gto.cas.web.flow.LegacyRedirectHeadersAction">
		<property name="redlist" ref="redlist" />
	</bean>

	<bean id="legacyLoginAction" class="org.ccci.gto.cas.web.flow.LegacyLoginAction">
		<property name="redlist" ref="redlist" />
	</bean>
</beans>
