<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- API controller -->
  <bean id="apiController" class="org.ccci.gto.cas.api.ApiControllerImpl">
    <property name="servicesManager" ref="servicesManager" />
    <property name="userService" ref="service.gcxUserService" />
  </bean>

  <!-- Audit resolver resources -->
  <bean id="audit.apiControllerPrincipalResolver" class="org.ccci.gto.cas.api.inspektr.audit.spi.support.ApiControllerPrincipalResolver" />

  <bean id="audit.apiActionResolver" class="org.ccci.gto.cas.api.inspektr.audit.spi.support.StatusAwareAuditActionResolver">
    <!-- String successSuffix -->
    <constructor-arg index="0" value="_SUCCESS" />

    <!-- String failureSuffix -->
    <constructor-arg index="1" value="_ERROR" />

    <!-- Map Status code suffixes -->
    <constructor-arg index="2">
      <map>
        <entry key="400" value="_BAD_REQUEST" />
        <entry key="401" value="_UNAUTHORIZED" />
        <entry key="404" value="_NOT_FOUND" />
      </map>
    </constructor-arg>
  </bean>
</beans>
