<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<query name="org.ccci.gcx.idm.core.model.impl.Audit.findAllByUserid">
		from Audit a
		where a.userid = :userid
		order by a.changeDate
	</query>

	<query name="org.ccci.gcx.idm.core.model.impl.GcxUser.findByGuid">
		from GcxUser g
		where g.GUID = :guid
	</query>

	<query name="org.ccci.gcx.idm.core.model.impl.GcxUser.findByEmail">
		from GcxUser g
		where g.email = :email
	</query>

</hibernate-mapping>
